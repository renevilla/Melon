
<section id="content_wrap">

	<header id="melon"><img src="/assets/logo.png"> </header>

		<%= render 'form' %>

		<div id="tag_cloud" style="width: 550px; height: 350px;">
		
		<% tag_cloud Post.tag_counts, %w[w1 w2 w3 w4 w5 w6] do |tag, css_class| %>
			<!--<%= link_to tag.name, tag_path(tag.name), class: css_class %>-->
			<%= content_tag :span, tag.name, class: css_class %>
		<% end %>

	
		</div>

</section>