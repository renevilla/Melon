
<section id="content_wrap">

	<header id="melon"><img src="/assets/logo.png"> </header>

		<%= render 'form' %>

		<div id="tag_cloud">
		
		<% tag_cloud Post.tag_counts, %w[s m l] do |tag, css_class| %>
		<%= link_to tag.name, tag_path(tag.name), class: css_class %>

		<% end %>
	
		</div>

</section>